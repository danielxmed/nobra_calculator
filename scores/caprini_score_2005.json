      "options": ["yes", "no"],
      "validation": {
        "enum": ["yes", "no"]
      }
    },
    {
      "name": "lupus_anticoagulant",
      "type": "string",
      "required": true,
      "description": "Lupus anticoagulant",
      "options": ["yes", "no"],
