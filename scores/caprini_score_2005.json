{
  "id": "caprini_score_2005",
  "title": "Caprini Score for Venous Thromboembolism (2005)",
  "description": "The Caprini Score stratifies risk of venous thromboembolism (VTE) in surgical patients, guiding prophylaxis decisions. It assesses multiple risk factors including age, surgery type, medical conditions, and mobility status to predict VTE risk and inform appropriate prevention strategies.",
  "category": "emergency",
  "version": "2005",
  "parameters": [
    {
      "name": "age_category",
      "type": "string",
      "required": true,
      "description": "Patient age category",
      "options": ["under_41", "41_to_60", "61_to_74", "75_or_older"],
      "validation": {
        "enum": ["under_41", "41_to_60", "61_to_74", "75_or_older"]
      }
    },
    {
      "name": "minor_surgery",
      "type": "string",
      "required": true,
      "description": "Minor surgery (planned procedure <45 minutes)",
      "options": ["yes", "no"],
      "validation": {
        "enum": ["yes", "no"]
      }
    },
    {
      "name": "major_surgery",
      "type": "string",
      "required": true,
      "description": "Major surgery (>45 minutes, laparoscopic surgery >45 minutes, or arthroscopic surgery >45 minutes)",
      "options": ["yes", "no"],
      "validation": {
        "enum": ["yes", "no"]
      }
    },
    {
      "name": "hip_knee_arthroplasty",
      "type": "string",
      "required": true,
      "description": "Elective major lower extremity arthroplasty (hip or knee replacement)",
      "options": ["yes", "no"],
      "validation": {
        "enum": ["yes", "no"]
      }
    },
    {
      "name": "hip_pelvis_leg_fracture",
      "type": "string",
      "required": true,
      "description": "Hip, pelvis, or leg fracture",
      "options": ["yes", "no"],
      "validation": {
        "enum": ["yes", "no"]
      }
    },
    {
      "name": "acute_spinal_cord_injury",
      "type": "string",
      "required": true,
      "description": "Acute spinal cord injury (paralysis)",
      "options": ["yes", "no"],
      "validation": {
        "enum": ["yes", "no"]
      }
    },
    {
      "name": "varicose_veins",
      "type": "string",
      "required": true,
      "description": "Varicose veins",
      "options": ["yes", "no"],
      "validation": {
        "enum": ["yes", "no"]
      }
    },
    {
      "name": "current_swollen_legs",
      "type": "string",
      "required": true,
      "description": "Current swollen legs (edema)",
      "options": ["yes", "no"],
      "validation": {
        "enum": ["yes", "no"]
      }
    },
    {
      "name": "central_venous_access",
      "type": "string",
      "required": true,
      "description": "Central venous access",
      "options": ["yes", "no"],
      "validation": {
        "enum": ["yes", "no"]
      }
    },
    {
      "name": "inflammatory_bowel_disease",
      "type": "string",
      "required": true,
      "description": "Inflammatory bowel disease",
      "options": ["yes", "no"],
      "validation": {
        "enum": ["yes", "no"]
      }
    },
    {
      "name": "bmi_over_25",
      "type": "string",
      "required": true,
      "description": "BMI >25 kg/m²",
      "options": ["yes", "no"],
      "validation": {
        "enum": ["yes", "no"]
      }
    },
    {
      "name": "acute_myocardial_infarction",
      "type": "string",
      "required": true,
      "description": "Acute myocardial infarction",
      "options": ["yes", "no"],
      "validation": {
        "enum": ["yes", "no"]
      }
    },
    {
      "name": "congestive_heart_failure",
      "type": "string",
      "required": true,
      "description": "Congestive heart failure (<1 month)",
      "options": ["yes", "no"],
      "validation": {
        "enum": ["yes", "no"]
      }
    },
    {
      "name": "sepsis",
      "type": "string",
